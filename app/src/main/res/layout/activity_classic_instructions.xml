<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="io.github.hashim.workoutTrainer.ClassicWorkout.ClassicInstructionsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/classicInstructionToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ff8c00"
        android:elevation="4dp" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/classicInstructionToolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Classic"
        android:textColor="#ff8c00"
        android:textSize="22sp"
        android:textStyle="bold" />
<ScrollView
    android:layout_below="@+id/heading"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <androidx.cardview.widget.CardView
            android:id="@+id/exe1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:elevation="10dp"
            android:padding="0dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title1"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/13 : Jumming Jacks "
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/img1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/title1"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/jumpingjacks"/>
                <TextView
                    android:layout_margin="12dp"
                    android:layout_below="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start with your feet and your arms by your sides,then jump up with your feet apart and your hands oveerhead. Return to the start position then do the next rep. This exercise provides a full body workout. "/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/exe2"
            android:layout_below="@+id/exe1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:elevation="10dp"
            android:padding="0dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title2"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2/13 : Wall Sit "
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/img2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/title2"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/wallsit1"/>
                <TextView
                    android:layout_margin="12dp"
                    android:layout_below="@+id/img2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start with your back against the wall, then slide down until your knees are at a 90 degree angle. Keep your back against the wall with your hands and arms away from legs. Hold the position.  The exercise is to strengthen the quadriceps muscles."/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/exe3"
            android:layout_below="@+id/exe2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:elevation="10dp"
            android:padding="0dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title3"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3/13 : Push up's "
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/img3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/title3"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/pushup"/>
                <TextView
                    android:layout_margin="12dp"
                    android:text="Lay prone on the ground with arms supporting your body.Keep your body stright while raising and lowering your body with your arms. This exercise works the chest, sholders, triceps, back and leg."
                    android:layout_below="@+id/img3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/exe4"
            android:layout_below="@+id/exe3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:elevation="10dp"
            android:padding="0dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title4"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4/13 : Abdominal Crunches "
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/img4"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/title4"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/abdominalescrunch"/>
                <TextView
                    android:layout_margin="12dp"
                    android:text="Lie on your back with your knees bent and your arms stretched forward. Then lift your upper body off the floor. Hold for a few seconds and slowly return. It primarily works the recyus abdominis muscle and the obliques."
                    android:layout_below="@+id/img4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/exe5"
            android:layout_below="@+id/exe4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:elevation="10dp"
            android:padding="0dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title5"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5/13 : Step up (On chair) "
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/img5"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/title5"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/stepup"/>
                <TextView
                    android:layout_margin="12dp"
                    android:text="Stand in front of a chair. Then step up on the chair and step back down. The exercise works to strengthen the leg and buttocks."
                    android:layout_below="@+id/img5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/exe6"
            android:layout_below="@+id/exe5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:elevation="10dp"
            android:padding="0dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title6"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6/13 : Squats "
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/img6"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/title6"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/squats"/>
                <TextView
                    android:layout_margin="12dp"
                    android:text="Stand with your feet shoulder width apart and your arms stretched forward, then lower your body until your thighs are parallel with the floor. Your knees should be extended in the same direction as your toes. Return to the start position and do the next rep. This works the thighs, hips buttocks, quads, hamstrings and lower body."
                    android:layout_below="@+id/img6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/exe7"
            android:layout_below="@+id/exe6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:elevation="10dp"
            android:padding="0dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title7"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7/13 : Triceps Dips "
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/img7"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/title7"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/tricepsdips"/>
                <TextView
                    android:layout_margin="12dp"
                    android:text="For the start position, sit on the chair. Then move your hip off the chair with your hands holding the edge of the chair. Slowly bend and stretch your arms to make your body go up and down. This is a great exercise for the triceps."
                    android:layout_below="@+id/img7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/exe8"
            android:layout_below="@+id/exe7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:elevation="10dp"
            android:padding="0dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title8"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8/13 : Plank "
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/img8"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/title8"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/plank"/>
                <TextView
                    android:layout_margin="12dp"
                    android:text="Lie on the floor with your toes and forearms on the ground. Keep your body stright and hold this position as long as you can. This exercise strengthens the abdomen, back and shoulders."
                    android:layout_below="@+id/img8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/exe9"
            android:layout_below="@+id/exe8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:elevation="10dp"
            android:padding="0dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title9"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9/13 : High Stepping "
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/img9"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/title9"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/highknees"/>
                <TextView
                    android:layout_margin="12dp"
                    android:text="Run in place while pulling your knees as high as possible with each step. keep your upper body upright during this exercise."
                    android:layout_below="@+id/img9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/exe10"
            android:layout_below="@+id/exe9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:elevation="10dp"
            android:padding="0dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title10"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/13 : Lunges "
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/img10"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/title10"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/lunge"/>
                <TextView
                    android:layout_margin="12dp"
                    android:text="Stand with your feet shoulder width apart and your hands on your hips. Take a step forward with your right leg and lower your body until your rigth thigh is parallel with the floor. Then return and switch to the other leg. this exercise strengthens the quadriceps, gluteus maximus and hamstrings."
                    android:layout_below="@+id/img10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/exe11"
            android:layout_below="@+id/exe10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:elevation="10dp"
            android:padding="0dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title11"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11/13 : Push up's with Rotation "
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/img11"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/title11"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/pushuprotaion"/>
                <TextView
                    android:layout_margin="12dp"
                    android:text="Start in the push-up position. THen go down for a push-up and as you come up, rotate your body and extend your right arm upwards. Repeat the exercise with the other arm. It's a great exercise for the chest , shoulders, arms and core."
                    android:layout_below="@+id/img11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/exe12"
            android:layout_below="@+id/exe11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:elevation="10dp"
            android:padding="0dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title12"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/13 : Side Plank Right "
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/img12"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/title12"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/sideplankright"/>
                <TextView
                    android:layout_margin="12dp"
                    android:text="Lie on your right side with your forearm supporting your body. Hold your body in a stringth line. This exercise targets the abdominal muscles and obliques."
                    android:layout_below="@+id/img12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/exe13"
            android:layout_below="@+id/exe12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:elevation="10dp"
            android:padding="0dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title13"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13/13 : Side Plank Left "
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/img13"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/title13"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/sideplank"/>
                <TextView
                    android:layout_margin="12dp"
                    android:text="Lie on your left side with your forearm supporting your body. Hold your body in a stringth line. This exercise targets the abdominal muscles and obliques."
                    android:layout_below="@+id/img13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</ScrollView>

</RelativeLayout>
