                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/title13"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13/14 : Bridge "
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"/>

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/img13"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_below="@+id/title13"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/bridge"/>
                    <TextView
                        android:layout_margin="12dp"
                        android:text="Lie on the floor , bend your legs . Then lift your hips off the floor. Keep doing it, this exercise works on your abdomen and hips."
                        android:layout_below="@+id/img13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/exe14"
                android:layout_below="@+id/exe13"
                android:layout_width="match_parent"
