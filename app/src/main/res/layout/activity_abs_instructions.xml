                        android:id="@+id/img12"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_below="@+id/title12"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/mountain_climber"/>
                    <TextView
                        android:layout_margin="12dp"
                        android:text="Start in the push-up position. Bend your right knee towards your chest and keep your left leg stright, then quickly switch from one leg to other. This exercise work on multipule muscle groups."
                        android:layout_below="@+id/img12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
